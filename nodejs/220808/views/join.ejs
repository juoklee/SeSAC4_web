<html>
    <head>
        <meta charset="UTF-8">
        <title>join.ejs</title>
        <!-- Axios CDN-->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <!-- jQuery CDN-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <!-- BootStrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
        <!-- BootStrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

        <style>
            @font-face {
                font-family: 'GmarketSansMedium';
                src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.1/GmarketSansMedium.woff') format('woff');
                font-weight: normal;
                font-style: normal;
            }
            body {
                font-family: 'GmarketSansMedium';
                background-color: darkseagreen;
            }
            .input-box{
                width: 500px;
                height: 40px;
            }
            .join-button{
                width: 500px;
                height: 40px;
                background-color: darkslategrey;
                color: white;
            }
        </style>
           
        <script>
            function joinUser() {
                var form = document.getElementById("join");
                axios({
                    method: 'post',
                    url: 'http://localhost:8080/join',
                    data: {
                        id: form.id.value,
                        name: form.name.value,
                        email: form.email.value,
                        phoneNumber: form.phoneNumber.value,
                        password: form.password.value
                    }
                }).then((response) => {
                    return response.data;
                }).then((data) => {

                    console.log(data);
                    //회원 가입이 완료되었습니다.
                    let html = "<h6 class='fw-bold text-center fs-4 mt-5'>회원가입이 완료되었습니다.</h6>"
                    document.getElementById("contents").innerHTML = html;
                    //로그인 버튼 보이기
                    let button_html = "<button class='join-button' type='button' onclick='login();'>로그인</button>"
                    document.getElementById("button-group").innerHTML = button_html;
                })
            }

            function login() {
                var form = document.getElementById("join");
                axios({
                    method: 'get',
                    url: 'http://localhost:8080/login'
                }).then((response) => {
                    return response.data;
                }).then((data) => {

                    console.log(data);
                    //title
                    let title_html = "<h6 class='fw-bold fs-2 mb-5 text-center'>로그인</h6> "
                    document.getElementById("title").innerHTML = title_html;
                    //contents
                    let contents_html = "<h6 class='fw-bold'>ID</h6>"+
                    "<input class='input-box mb-2' type='text' name='id' placeholder='아이디를 입력하세요' required><br>" +
                    "<h6 class='fw-bold'>Password</h6>" +
                    "<input class='input-box mb-2' type='password' name='password' placeholder='비밀번호를 입력하세요' required><br>"
                    document.getElementById("contents").innerHTML = contents_html;
                    //로그인 버튼 보이기
                    let button_html = "<button class='join-button' type='button' onclick='loginUser();'>로그인</button>"
                    document.getElementById("button-group").innerHTML = button_html;
                })
            }

            function loginUser() {
                var form = document.getElementById("join");
                axios({
                    method: 'post',
                    url: 'http://localhost:8080/login',
                    data: {
                        id: form.id.value,
                        password: form.password.value
                    }
                }).then((response) => {
                    console.log("response.data:" , response.data);
                    return response.data;
                }).then((data) => {
                    if ( data.flag == false) {
                        //메세지 띄우기
                        let alert_html = "<h6 class='fw-bold text-center fs-4 mt-5'>다시 로그인해주세요.</h6>";
                        document.getElementById("alert").innerHTML = alert_html;
                    } else {
                        //title
                        let title_html = "<h6 class='fw-bold fs-2 mb-5 text-center'>회원정보 수정</h6> "
                        document.getElementById("title").innerHTML = title_html;
                        //contents
                        let contents_html = "<h6 class='fw-bold'>ID</h6>"+
                            "<input class='input-box mb-2' type='text' name='id' value='"+ data.result.id +"' readonly><br>" +
                            "<h6 class='fw-bold'>name</h6>" +
                            "<input class='input-box mb-2' type='text' name='password' value='"+ data.result.name +"' required><br>" +
                            "<h6 class='fw-bold'>email</h6>" +
                            "<input class='input-box mb-2' type='text' name='password' value='"+ data.result.email +"' required><br>" +
                            "<h6 class='fw-bold'>phoneNumber</h6>" +
                            "<input class='input-box mb-2' type='text' name='password' value='"+ data.result.phoneNumber +"' required><br>" +
                            "<h6 class='fw-bold'>password</h6>" +
                            "<input class='input-box mb-2' type='text' name='password' value='"+ data.result.password +"' required><br>";
                        document.getElementById("contents").innerHTML = contents_html;
                        //alert
                        let alert_html = "";
                        document.getElementById("alert").innerHTML = alert_html;
                        //button
                        let button_html = "<button class='join-button' type='button' onclick='updateUser('" + data.result.id +  "');'>회원정보수정</button>" +
                            "<button class='join-button' type='button' onclick='deleteUser('" + data.result.id +  "');'>회원탈퇴</button>";
                        document.getElementById("button-group").innerHTML = button_html;
                    }     
                })
            }

            //회원 정보 수정
            function updateUser( id ) {
                var form = document.getElementById("join");
                axios({
                   method: 'patch',
                   url: 'http://localhost:8080/edit',
                   data: {
                    id: id,
                    name: form.name.value,
                    email: form.email.value,
                    phoneNumber: form.phoneNumber.value,
                    password: form.password.value
                   } 
                }).then((response) => { 
                    return response.data;
                }).then((data) => {
                    var input  = document.getElementById(contents);
                    var children = input.children;
                    console.log(children);

                    $(children[3]).text(form.name.value);
                    $(children[5]).text(form.email.value);
                    $(children[7]).text(form.phoneNumber.value);
                    $(children[9]).text(form.password.value);
                });
            }

            //회원 탈퇴
            function updateUser( id ) {
                axios({
                   method: 'delete',
                   url: 'http://localhost:8080/delete',
                   data: { id: id } 
                }).then((response) => { return response.data; })
                .then((data) => { 

                 });
            }


        </script>
    </head>
    <body>
        <form id="join">
            <div class="row justify-content-center mt-5">
                <div class="col-4"></div>
                <div class="col-4 justify-content-center" id="title">
                    <h6 class="fw-bold fs-2 mb-5 text-center">회원가입</h6> 
                </div>
                <div class="col-4"></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-4"></div>
                <div class="col-4 justify-content-center" id="contents">
                    <h6 class="fw-bold">ID</h6>
                    <input class="input-box mb-2" type="text" name="id" placeholder="아이디를 입력하세요" required><br>
                    <h6 class="fw-bold">Name</h6>
                    <input class="input-box mb-2" type="text" name="name" placeholder="이름을 입력하세요" required><br>
                    <h6 class="fw-bold">Email</h6>
                    <input class="input-box mb-2" type="text" name="email" placeholder="이메일 주소를 입력하세요"><br>
                    <h6 class="fw-bold">Phone Number</h6>
                    <input class="input-box mb-2" type="text" name="phoneNumber" placeholder="010 - XXXX - XXXX 형태로 입력하세요"><br>
                    <h6 class="fw-bold">Password</h6>
                    <input class="input-box mb-2" type="password" name="password" placeholder="비밀번호를 입력하세요" required><br>
                </div>
                <div class="col-4"></div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-4"></div>
                <div class="col-4" id="button-group">
                    <button class="join-button" type="button" onclick="joinUser();">회원가입</button>
                </div>
                <div class="col-4"></div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-4"></div>
                <div class="col-4" id="alert">
                </div>
                <div class="col-4"></div>
            </div>
        </form>
    </body>

    <script>

    </script>
</html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>방명록</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    
        <style>
            table {
                border: 1px solid #444444;
                border-spacing: 0.5px;
            }
            th{
                border: 1px solid #444444;
                text-align: center;
                padding: 10px;
                font-weight: bold;
            }
            td {
                border: 1px solid #444444;
                padding: 10px;
            }
        </style>

        <script>
            function writeComment() {
                var form = document.getElementById("form_comment");
                axios({
                    method: 'post',
                    url: 'http://localhost:8080/visitor/write',
                    data: {
                        name: form.name.value,
                        comment: form.comment.value
                    }
                })
                .then((response) => {
                    //res.send로 보낸 {id: result}는 여기 response.data에 담겨져온다
                    return response.data;
                })
                .then((data) => {
                    // data= { id: 5 }
                    let html = "<tr><td>" + data.id + "</td><td>" + form.name.value + "</td><td>" + form.comment.value + "</td><td></td><td></td></tr>";
                   
                    $("table").append(html);       
                })
            }
        </script>
    
    </head>
    <body>
        <div>
            <form id="form_comment">
                <fieldset>
                    <legend>방명록 등록</legend>
                    <div><input type="hidden" name="id" placeholder="사용자 아이디"></div>
                    <div><input type="text" name="name" placeholder="사용자 이름"></div>
                    <div><input type="text" name="comment" placeholder="방명록"></div>
                    <div id="button-group">
                        <button type="button" onclick="writeComment();">등록</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <br/>
        <table id="visit_list">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>작성자</th>
                    <th>방명록</th>
                    <th>수정</th>
                    <th>삭제</th>
                </tr>   
            </thead>
            <tbody>  
                <%
                for (let i=0; i<data.length; i++ ) {
                %>
                    <tr>
                        <td><%=data[i].id%></td>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].comment%></td>
                        <td></td>
                        <td></td>
                    </tr>
                <%
                    }
                %>
            </tbody>    
        </table>
    </body>
</html>